<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZCMobileDemo.Lite.Views.Timesheet.Page1" StyleId="page1">

    <StackLayout x:Name="mainStack" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" >
        <Label x:Name="PageTitle" Text="{Binding Header}" IsVisible="False"></Label>
        <Label Text="Page 1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="Red" FontSize="Large"></Label>
        <Entry Text="{Binding Messsge1, Mode=TwoWay}" HeightRequest="40" WidthRequest="80" BackgroundColor="LightBlue" HorizontalOptions="FillAndExpand"></Entry>
        <Entry Text="{Binding Messsge2, Mode=TwoWay}" HeightRequest="40" WidthRequest="80" BackgroundColor="LightBlue" HorizontalOptions="FillAndExpand"></Entry>
        <Button Text="Go to Page 2" Clicked="Button_Clicked" FontSize="Large"></Button>
    </StackLayout>
</ContentPage>